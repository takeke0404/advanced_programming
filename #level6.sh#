#!/bin/sh
name=$1
if [ $2 = 1 ]
then
   template="tmpproc/rotate0/"airgun_women_syufu.ppm
    ./matching $name "${template}" 0 0.1 pg
fi
if [ $2 = 2 ]
then
   template="tmpproc/rotate0/"kids_chuunibyou_girl.ppm
    ./matching $name "${template}" 0 0.1 pg
fi
if [ $2 = 3 ]
then
   template="tmpproc/rotate0/"mokuzai_hakobu.ppm
    ./matching $name "${template}" 0 0.1 pg
fi
if [ $2 = 4 ]
then
   template="tmpproc/rotate0/"ocean_beach_kinzokutanchi.ppm
   ./matching $name "${template}" 0 0.1 pg
fi
if [ $2 = 5 ]
then
   template="tmpproc/rotate90/"airgun_women_syufu.ppm
   echo `basename ${template}`
    ./matching $name "${template}" 90 0.1 pg
    echo ""
fi
