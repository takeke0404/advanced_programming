    echo ""
fi
if [ $2 = 14 ]
then
   template="tmpproc/rotate270/"kids_chuunibyou_girl.ppm
   echo `basename ${template}`
    ./matching $name "${template}" 270 0.1 pg
    echo ""
fi
if [ $2 = 15 ]
then
   template="tmpproc/rotate270/"mokuzai_hakobu.ppm
   echo `basename ${template}`
    ./matching $name "${template}" 270 0.1 pg
    echo ""
fi
if [ $2 = 16 ]
then
   template="tmpproc/rotate270/"ocean_beach_kinzokutanchi.ppm
